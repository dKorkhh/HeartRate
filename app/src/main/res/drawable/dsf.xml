<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:width="200dp" android:height="20dp">
        <shape android:shape="rectangle">
            <corners  android:topLeftRadius="25dp" android:bottomLeftRadius="25dp"/>
            <solid android:color="#21D7E2"/>
        </shape>
    </item>

    <item android:width="200dp" android:height="20dp" android:left="200dp">
        <shape android:shape="rectangle">
            <solid android:color="#1FF19B"/>
        </shape>
    </item>

    <item android:width="200dp" android:height="20dp" android:left="400dp">
        <shape android:shape="rectangle">
            <corners  android:topRightRadius="25dp" android:bottomRightRadius="25dp"/>
            <solid android:color="#FF4C4C"/>
        </shape>
    </item>
</layer-list>